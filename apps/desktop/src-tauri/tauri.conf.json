{
  "build": {
    "beforeDevCommand": "bun --cwd .. dev",
    "beforeBuildCommand": "bun --cwd .. build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "SafeLens",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "exists": true,
        "removeFile": true,
        "scope": ["$APPDATA/**"]
      },
      "dialog": { "all": true },
      "path": { "all": true },
      "shell": { "open": true }
    },
    "windows": [
      {
        "title": "SafeLens",
        "width": 1200,
        "height": 900,
        "resizable": true
      }
    ],
    "bundle": {
      "identifier": "com.safelens.app"
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' http://localhost:5173 ws://localhost:5173"
    }
  }
}
